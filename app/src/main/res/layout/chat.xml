<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/b" android:layout_width="match_parent" android:layout_height="match_parent" android:baselineAligned="false" android:elevation="10dp">
    <ImageView android:id="@+id/bg" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/linearLayout" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="3dp" android:layout_alignParentBottom="true" android:elevation="7dp">
        <EditText android:textSize="20sp" android:textColor="@android:color/black" android:textColorHint="#666" android:id="@+id/text_message" android:background="@drawable/edittextback" android:layout_width="0dp" android:layout_height="50dp" android:layout_margin="5dp" android:hint="@string/type_message_here" android:maxLines="3" android:layout_weight="1" android:inputType="none|text|textMultiLine|textUri|textShortMessage|textLongMessage" android:paddingStart="15dp" android:paddingEnd="15dp" android:elevation="1dp" android:backgroundTint="#fafafa"/>
        <ImageButton android:id="@+id/sendBut" android:background="@drawable/roundbacl" android:longClickable="true" android:layout_width="50dp" android:layout_height="50dp" android:layout_margin="5dp" android:src="@drawable/ic_send_black" android:textAlignment="center" android:elevation="2dp"/>
    </LinearLayout>
    <ListView android:id="@+id/message_list" android:background="@android:color/transparent" android:drawingCacheQuality="high" android:layout_width="match_parent" android:layout_height="match_parent" android:stackFromBottom="true" android:divider="@null" android:dividerHeight="0dp" android:layout_above="@+id/linearLayout" android:layout_marginStart="5dp" android:layout_marginEnd="5dp" android:elevation="0dp"/>
    <ImageButton android:id="@+id/speechBut" android:background="@drawable/roundbacl" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginBottom="8dp" android:src="@drawable/ic_record_voice_over_black" android:layout_alignParentBottom="true" android:textAlignment="center" android:layout_marginEnd="5dp" android:layout_alignParentEnd="true" android:elevation="2dp"/>
    <ImageButton android:id="@+id/laughBut" android:background="@drawable/roundbacl" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginBottom="8dp" android:src="@drawable/ic_smily" android:layout_alignParentBottom="true" android:textAlignment="center" android:layout_marginEnd="5dp" android:layout_alignParentEnd="true" android:elevation="2dp"/>
    <ImageButton android:id="@+id/cryBut" android:background="@drawable/roundbacl" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginBottom="8dp" android:src="@drawable/ic_cry" android:layout_alignParentBottom="true" android:textAlignment="center" android:layout_marginEnd="5dp" android:layout_alignParentEnd="true" android:elevation="2dp"/>
    <ImageButton android:id="@+id/pokeBut" android:background="@drawable/roundbacl" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginBottom="8dp" android:src="@drawable/ic_push_button" android:layout_alignParentBottom="true" android:textAlignment="center" android:layout_marginEnd="5dp" android:layout_alignParentEnd="true" android:elevation="2dp"/>
    <ImageButton android:id="@+id/gunBut" android:background="@drawable/roundbacl" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginBottom="8dp" android:src="@drawable/ic_gun" android:layout_alignParentBottom="true" android:textAlignment="center" android:layout_marginEnd="5dp" android:layout_alignParentEnd="true" android:elevation="2dp"/>
    <TextView android:textSize="20sp" android:textColor="@android:color/black" android:id="@+id/dial" android:background="@drawable/sign_back" android:padding="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:text="Press and hold for more" android:layout_above="@+id/linearLayout" android:alpha="0.7" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true" android:elevation="12dp"/>
    <ImageView android:id="@+id/anyehi" android:visibility="gone" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginBottom="20dp" android:src="@drawable/triangle" android:layout_below="@+id/dial" android:alpha="0.7" android:scaleX="1" android:scaleY="2" android:rotation="180" android:layout_marginEnd="20dp" android:layout_alignParentEnd="true" android:elevation="12dp"/>
    <TextView android:textSize="20sp" android:textColor="@android:color/black" android:id="@+id/dial2" android:background="@drawable/sign_back" android:padding="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="75dp" android:text="Says whatever you have written!" android:layout_above="@+id/linearLayout" android:alpha="0.7" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true" android:elevation="12dp"/>
    <ImageView android:id="@+id/anyehi2" android:visibility="gone" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginTop="-60dp" android:src="@drawable/triangle" android:layout_below="@+id/dial2" android:alpha="0.7" android:scaleX="1" android:scaleY="2" android:rotation="180" android:layout_alignStart="@+id/speechBut" android:elevation="12dp"/>
</RelativeLayout>
